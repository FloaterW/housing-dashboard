# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=housing_dashboard
DB_CONNECTION_LIMIT=10
DB_SSL=false

# Logging Configuration
LOG_LEVEL=info

# Security Configuration
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=12

# Rate Limiting (requests per 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# External API Keys (if needed)
MLS_API_KEY=your_mls_api_key_here
GOVERNMENT_DATA_API_KEY=your_gov_api_key_here

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://housing-dashboard.vercel.app

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
EMAIL_FROM=Housing Dashboard <noreply@housingdashboard.com>

# Cron Job Configuration
DATA_SYNC_ENABLED=true
DATA_SYNC_SCHEDULE=0 2 * * *
CLEANUP_SCHEDULE=0 3 * * 0